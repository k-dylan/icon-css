.icon-click
    width 1em
    height 1em
    position relative
    border .1em solid $mainColor
    border-radius 50% 
    &:before
    &:after
        content ''
        display block
        position absolute
        left .35em
        width .1em
        height .4em
        top .03em
        border-radius .1em
        background-color $mainColor
    &:after 
        transform-origin 50% 95%
        transform rotate(125deg)
        
        
        