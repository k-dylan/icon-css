.icon-loading  
  width 1em
  height 1em
  position relative
  animation rotate 1s linear infinite
  &:after
    content ''
    width @width * .2
    height @height * .2
    posCenter()
    border-radius 50%
    box-shadow 0 -.4em 0 0 rgba($mainColor, .25),
      .3em -.3em 0 0 rgba($mainColor, .5),
      .4em 0 0 0 rgba($mainColor, .75),
      .3em .3em 0 0 rgba($mainColor, 1)