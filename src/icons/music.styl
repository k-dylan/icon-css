.icon-music
	width .6em
	height .6em
	margin-bottom .3em
	margin-top .1em
	position relative
	border-style solid 
	border-color $mainColor
	border-width .3em .1em 0 .1em 
	border-radius .1em .1em 0 0
	transform skewY(-15deg)
	&:after 
	&:before
		content ''
		display block
		position absolute
		width .35em
		height .3em
		background-color $mainColor
		border-radius 50%
		bottom -.2em        
	&:before
		left -.35em 
	&:after 
		right -.1em
