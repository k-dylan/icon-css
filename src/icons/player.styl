

.icon 
    &-play 
        border-width .5em 0 .5em 1em
        border-style solid
        border-color transparent transparent transparent $mainColor
    &-pause
        &:before
        &:after
            showContent()
            height 1em
            width .25em
            margin 0 .1em
            background-color $mainColor
    &-next
        &:before 
            showContent()
            border-width .5em 0 .5em .5em
            border-style solid
            border-color transparent transparent transparent $mainColor
            height 0
        &:after 
            showContent()            
            width .2em
            height 1em 
            margin-left .1em 
            background-color $mainColor
    &-prev
        &:before
            @extend .icon-next:after
        &:after 
            showContent()
            height 0
            margin-left .1em
            border-width .5em .5em .5em 0
            border-style solid
            border-color transparent $mainColor transparent transparent
    &-forward
        &:before
        &:after
            @extend .icon-next:before
    &-rewind
        &:before
        &:after
            @extend .icon-prev:after